	</servlet>
	<servlet-mapping>
		<servlet-name>CurrentTaxesServlet</servlet-name>
		<url-pattern>/currentTax</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>PaycheckServlet</servlet-name>
